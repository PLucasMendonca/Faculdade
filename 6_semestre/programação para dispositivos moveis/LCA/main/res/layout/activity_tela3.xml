<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".tela3">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/blue"/>

    <TextView
        android:id="@+id/tituloLista"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_marginStart="65dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Titulo da lista"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        app:srcCompat="?attr/actionModeCloseDrawable"
        app:tint="@color/white" />

    <Button
        android:id="@+id/bFiltro"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="75dp"
        android:backgroundTint="@color/blue"
        android:textSize="20dp"
        android:text="Filtro" />
    <Button
        android:id="@+id/bOrdenação"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="75dp"
        android:backgroundTint="@color/blue"
        android:textSize="20dp"
        android:text="Ordenação" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="502dp"
        android:layout_below="@+id/bFiltro"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/itens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></RelativeLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/bAddItem"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:onClick="tela2"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mais2"
        tools:ignore="OnClick" />
</RelativeLayout>